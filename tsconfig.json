{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "declaration": true, // 生成 `.d.ts` 文件
    "declarationDir": "ts",
    "sourceMap": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "jsx": "react",
    "experimentalDecorators": true,
    "allowJs": false
  },
  "include": [
    "./src/**/*.ts"
  ]
}
